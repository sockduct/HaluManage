{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: HaluManage Server",
            "type": "debugpy",
            "request": "launch",
            // This points directly to the server script you are running.
            "program": "${workspaceFolder}/halumanage/server.py",
            "console": "integratedTerminal",
            // Set to false to allow stepping into library code if needed.
            "justMyCode": false,
            // These are the command-line arguments for your server.
            "args": [
                "--base-url",
                "http://localhost:8000/v1"
            ]
        }
    ]
}
